<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/headerImageContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_promo_gradient" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="22.5dp"
            app:cardElevation="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/black" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="60dp"
            android:text="FLASH SALE\nAKHIR TAHUN"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerImageContainer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_bottom_sheet_rounded"
            android:padding="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo Berakhir Dalam:"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="#FFEBEE"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:id="@+id/tvTimerHour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="02"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="24sp"
                    android:layout_marginHorizontal="8dp"
                    android:textStyle="bold"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="#FFEBEE"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:id="@+id/tvTimerMinute"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="45"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="24sp"
                    android:layout_marginHorizontal="8dp"
                    android:textStyle="bold"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="#FFEBEE"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:id="@+id/tvTimerSecond"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="30"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Kode Voucher Anda"
                android:textColor="@color/text_primary"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_dashed_border"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvVoucherCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="JOKI50OFF"
                    android:textColor="@color/app_primary"
                    android:textSize="20sp"
                    android:letterSpacing="0.1"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/btnCopy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_copy"
                    app:tint="@color/text_secondary"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Syarat &amp; Ketentuan"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Promo berlaku untuk semua layanan Joki.\n2. Maksimal potongan Rp 50.000.\n3. Tidak dapat digabung dengan promo lain.\n4. Berlaku s/d 31 Desember 2025."
                android:lineSpacingExtra="6dp"
                android:textColor="@color/text_secondary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUsePromo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/app_primary"
                android:text="Pakai Promo Sekarang"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>